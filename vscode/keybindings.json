    {
   "key": "ctrl+/",
   "command": "undo",
   "when": "editorTextFocus && !editorReadOnly"
    },
    {
   "key": "alt+d",
   "command": "deleteWordEndRight",
   "when": "editorTextFocus && !editorReadonly"
    },
    {
        // Move by words with alt+f and alt+b
   "key": "alt+b",
   "command": "cursorWordStartLeft"
    },
    {
   "key": "alt+f",
   "command": "cursorWordStartRight"
    },
    {
   "key": "ctrl+w",
   "command": "deleteWordLeft"
    },
    {
        // Move to next editor (tab)
   "key": "cmd+0",
   "command": "workbench.action.navigateRight"
    },
    {
   "key": "cmd+9",
   "command": "workbench.action.navigateLeft"
    },
    {
    "key": "ctrl+l",
    "command": "center-editor-window.center",
    "when": "editorTextFocus"
    },
    {
   "key": "ctrl+t",
   "command": "workbench.action.navigateEditorGroups"
    },
    {
        // Open version control
   "key": "shift+cmd+v",
   "command": "-markdown.showPreview",
   "when": "editorLangId == ‘markdown’"
    },
    {
   "key": "shift+cmd+v",
   "command": "workbench.view.scm"
    },
    {
        // Stage changes in diff editor
   "key": "ctrl+s",
   "command": "git.stageSelectedRanges",
   "when": "isInDiffEditor"
    },
    {
        // Open project switcher
   "key": "ctrl+cmd+p",
   "command": "projectManager.listProjects"
    },
    {
        // Toggle integrated terminal
   "key": "ctrl+.",
   "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        // Run default test task
   "key": "f1",
   "command": "workbench.action.tasks.test"
    },
    {
        // Run another test task
   "key": "shift+f1",
   "command": "workbench.action.tasks.runTask",
   "args": "Pay Test File at Line"
    }
]
